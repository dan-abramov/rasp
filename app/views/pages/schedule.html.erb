<div style='width: 25%;'>
  <div style='height:100px'></div>
  <%= form_for :route, url: 'get_schedule' do |form| %>
    <div class="form-group">
      <%= form.text_field :from, class:"form-control", required: true %>
    </div>
    <div style='height:15px'></div>
    <div class="form-group">
      <%= form.text_field :to, class:"form-control", required: true %>
    </div>
    <div style='height:15px'></div>
    <%= form.submit 'Найти', class: "btn btn-primary", style: 'float: right;'%>
  <% end %>
</div>
<%= @response %>
