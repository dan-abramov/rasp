<div class="row">
  <div class="column information">
    <div style="display: flex; align-items: center; justify-content: center;margin-top: 25px;">
      <%= form_for :route, remote: true, url: 'get_schedule', html: { style: 'width: 90%;' } do |form| %>
      <div class="form-group with-delete-icon", style='display: inline-block;'>
        <%= form.text_field :from, class:"form-control disabled-input", required: true,
            data: { autocomplete: autocomplete_bus_station_name_pages_path }, readonly: true %>
        <div class="icon-delete" id="clear-input-from">
          <div style="width: 100%; height: 100%; position: relative;">
            <i class="fa fa-times"></i>
          </div>
        </div>
      </div>

      <!-- <i class="fa fa-exchange" style='color: grey'></i> -->
      <div class="form-group with-delete-icon", style='display: inline-block;'>
        <%= form.text_field :to, class:"form-control disabled-input", required: true, value: '', readonly: true %>
        <div class="icon-delete" id="clear-input-to">
          <div style="width: 100%; height: 100%; position: relative;">
            <i class="fa fa-times"></i>
          </div>
        </div>
      </div>
      <%= form.select(:day, ['сегодня', 'завтра'], options = {}, html_options = { class: 'form-control day-selector', style: 'display: inline-block;' }) %>
      <%= form.submit 'Найти', class: "btn btn-primary", id: 'form-find-button', style: 'display: inline-block; margin-bottom: 1px;'%>
      <% end %>
    </div>
    <div class="results">

    </div>
  </div>

  <div class="column map" style="display: flex;align-items: center; justify-content: center;">
    <div id="map" style=" width: 100%; height: 100vh;"></div>
  <div>
</div>
